#include "datos.h"
int i=0;
int j=0;
int horizontal[3];
int vertical[20];
int fila,columna;
int suma=0;
int c=0;
long int mult=1;
float pro=0;
float prom=0;

void setup() {
  
Serial.begin(9600);
 
 Serial.println("****BIENVENIDO****");
  Serial.println("****ESCOJA LA OPERACION A REALIZAR EN LA MATRIZ****");
    Serial.println("1    Para mostrar la suma de cada fila");
    Serial.println("2    Para mostrar el producto de cada columna");
    Serial.println("3    Para mostrar el promedio de las sumas de todas las columnas");
    
    delay(300);
}

void loop() {

  while (Serial.available() > 0) //Mientras haya datos en el buffer ejecuta la funci√≥n
  {
    char dato = Serial.read();
    switch (dato)
    {
      case '1':
        sum();
        break;
        case '2':
        multiplicacion();
        break;
        case '3':
        promedio();
        break;
      
    };
    dato = ' ';
  }
}
void sum(){
  for(fila=0;fila<20;fila++)
{
    suma=0;
    for(columna=0;columna<3;columna++)
    {
        suma+=matriz[fila][columna];
    }
    vertical[fila]=suma;
}

c=i;
if(c<20){

    
for(i=0;i<=19;i++){


    Serial.print("   SUMA FILA  ");
    Serial.println(i+1);
     delay(300);
    Serial.println(vertical[i]);
    delay(300);
}
}




}

void multiplicacion()
{
  for(columna=0;columna<3;columna++)
{
    mult=1;
    for(fila=0;fila<20;fila++)
    {
        mult=mult*(matriz[fila][columna]);
    }
 



    Serial.print("   COLUMNA  ");
     Serial.println(columna+1);
     delay(300);
    Serial.println(mult);
    delay(300);

}



}

void promedio()
{
  for(columna=0;columna<3;columna++)
{
    pro=0;
    for(fila=0;fila<20;fila++)
    {
        pro=pro+(matriz[fila][columna]);
        
    }
 
prom=prom+pro;


    

}
prom=prom/3;
Serial.print("   PROMEDIO ES ");
     
     delay(300);
    Serial.println(prom);
    delay(300);

}
